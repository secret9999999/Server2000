+    }
+
+    @Override
+    public @NotNull ItemStack getResultItem() {
+        return this.resultItem;
+    }
+
+    @Override
+    public void setResultItem(final @NotNull ItemStack resultItem) {
+        this.resultItem = resultItem;
+    }
+
+    @Override
+    public boolean isCancelled() {
+        return this.cancelled;
+    }
+
+    @Override
